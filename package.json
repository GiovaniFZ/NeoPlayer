{
  "name": "neoplayer",
  "version": "1.0.0",
  "author": "Lucas Gabriel (lucmsilva)",
  "main": "main.js",
  "module": "main.js",
  "type": "module",
  "description": "Module player built on Electron",
  "license": "BSD-3-Clause",
  "scripts": {
    "start": "nodemon --watch . --ignore node_modules --exec \"electron .\"",
    "build": "electron-builder"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "electron-builder": "^26.0.12",
    "electron": "^35.2.0",
    "nodemon": "^3.1.9"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "br.lucmsilva.neoplayer",
    "productName": "NeoPlayer",
    "files": [
      "app/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "!jsconfig.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}